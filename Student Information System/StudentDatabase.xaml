        <TextBox x:Name="tbx_dbMotherOccupation" HorizontalAlignment="Left" Margin="139,304,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" Height="26"/>
        <TextBox x:Name="tbx_dbMotherContact" HorizontalAlignment="Left" Margin="139,336,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" Height="26"/>
        <TextBox x:Name="tbx_dbFathersName" HorizontalAlignment="Left" Margin="475,270,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216" Height="26"/>
