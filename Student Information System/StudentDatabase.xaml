        <Label Content="Guardian Address:" HorizontalAlignment="Left" Margin="35,586,0,0" VerticalAlignment="Top" Background="#FFE2E2E2" Width="100"/>
        <TextBox x:Name="tbx_dbGuardianAddress" HorizontalAlignment="Left" Margin="139,586,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" Height="26"/>
