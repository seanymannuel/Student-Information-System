        <Label Content="Gender:" HorizontalAlignment="Left" Margin="369,122,0,0" VerticalAlignment="Top" Background="#FFE2E2E2" Width="100"/>
        <Label Content="Home Address:" HorizontalAlignment="Left" Margin="369,153,0,0" VerticalAlignment="Top" Background="#FFE2E2E2" Width="100"/>
        <Label Content="Contact Number:" HorizontalAlignment="Left" Margin="369,184,0,0" VerticalAlignment="Top" Background="#FFE2E2E2" Width="100"/>
        <TextBox x:Name="tbx_dbLastName" HorizontalAlignment="Left" Margin="139,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" Height="26"/>
        <DatePicker x:Name="date_dbBirthday" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,182,0,0" Height="30" Width="214"/>
        <RadioButton x:Name="rbtn_dbFemale" Content="Female" HorizontalAlignment="Left" Margin="487,130,0,0" VerticalAlignment="Top" GroupName="GenderGroup"/>
        <RadioButton x:Name="rbtn_dbMale" Content="Male" HorizontalAlignment="Left" Margin="553,130,0,0" VerticalAlignment="Top" GroupName="GenderGroup"/>
        <TextBox x:Name="tbx_dbFirstName" HorizontalAlignment="Left" Margin="139,120,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" Height="26"/>
        <TextBox x:Name="tbx_dbMiddleName" HorizontalAlignment="Left" Margin="139,152,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" Height="26"/>
