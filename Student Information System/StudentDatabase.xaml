        <TextBox x:Name="tbx_dbFatherOccupation" HorizontalAlignment="Left" Margin="475,302,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216" Height="26"/>
        <Label Content="Contact Number:" Margin="369,336,0,0" VerticalAlignment="Top" Background="#FFE2E2E2" Width="100" HorizontalAlignment="Left" Foreground="Black"/>
        <TextBox x:Name="tbx_dbFatherContact" HorizontalAlignment="Left" Margin="475,336,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216" Height="26"/>
