        <TextBox x:Name="tbx_dbGuardianContact" HorizontalAlignment="Left" Margin="473,584,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="218" Height="26"/>
        <Button x:Name="btn_Update" Content="Update" HorizontalAlignment="Left" Margin="723,580,0,0" VerticalAlignment="Top" Height="22" Width="132" Click="btn_Update_Click"/>
        <Label Content="Student Information" HorizontalAlignment="Left" Margin="250,27,0,0" VerticalAlignment="Top" Width="240" FontFamily="Candara" FontSize="20" FontWeight="Bold" Height="34"/>
        <ListBox x:Name="ListBox_Students" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="723,93,117,99" SelectionChanged="ListBox_Students_SelectionChanged"/>
        <TextBox x:Name="tbx_Search" HorizontalAlignment="Left" Height="24" Margin="860,579,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="104" TextChanged="tbx_Search_TextChanged"/>
        <Label Content="STUDENT ID" HorizontalAlignment="Left" Margin="723,67,0,0" VerticalAlignment="Top" Width="83" FontFamily="Candara" FontSize="14" FontWeight="Bold" Height="26"/>
        <Button x:Name="btn_Clear" Content="Clear" HorizontalAlignment="Left" Height="23" Margin="967,580,0,0" VerticalAlignment="Top" Width="40" Click="btn_Clear_Click"/>
        <Button x:Name="btn_Back" Content="← Back" HorizontalAlignment="Left" Margin="20,12,0,0" VerticalAlignment="Top" Width="49" Click="btn_Back_Click"/>
