        <TextBox x:Name="tbx_dbSiblingLname" HorizontalAlignment="Left" Margin="139,408,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" Height="26"/>
        <Label Content="First Name:" HorizontalAlignment="Left" Margin="35,438,0,0" VerticalAlignment="Top" Background="#FFE2E2E2" Width="100"/>
        <TextBox x:Name="tbx_dbSiblingFname" HorizontalAlignment="Left" Margin="139,438,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" Height="26"/>
        <Label Content="Middle Name:" HorizontalAlignment="Left" Margin="35,470,0,0" VerticalAlignment="Top" Background="#FFE2E2E2" Width="100"/>
        <TextBox x:Name="tbx_dbSiblingMname" HorizontalAlignment="Left" Margin="139,470,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" Height="26"/>
